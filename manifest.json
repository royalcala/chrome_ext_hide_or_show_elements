{
    "manifest_version": 2,
    "name": "Hide/Show Element",
    "description": "This extension will hide or show an element by class name or ID",
    "version": "1.0",
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }